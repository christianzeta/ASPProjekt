@page
@model ASPProjekt.Pages.EventsModel

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>


@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-page="/JoinEvent" class="btn btn-secondary">Join</a>
    </p>
}
else
{
    <p>
        <a asp-page="/UserPages/UserLogin" class="btn btn-secondary">Log in to join events!</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].SpotsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Event)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpotsAvailable)
                </td>
                <td>
                    <input type="checkbox" />
                </td>
            </tr>
        }
    </tbody>
</table>
